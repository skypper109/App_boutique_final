{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ma Boutique",
  "version": "2.0.3",
  "identifier": "com.maboutique.desktop",
  "build": {
    "frontendDist": "../dist/front-boutique/browser",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:4200"
  },
  "app": {
    "windows": [
      {
        "title": "Ma Boutique",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/skypper109/App_boutique_final/releases/download/{{version}}/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM4NUE3NkVGRDc1NDI1MzAKUldRd0pWVFg3M1pheU90Z2hKZFpoZUFPNE0rRktMU3JGY2daelZKN2dkMTdVVWdXekEwek95WEMK"
    }
  }
}
