{
  "name": "front-boutique",
  "version": "2.1.9",
  "description": "Application de gestion Ma Boutique",
  "author": "Skypper",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:Front_Boutique": "node dist/front-boutique/server/server.mjs",
    "electron:start": "ng build && electron .",
    "electron:build": "ng build && electron-builder build --win --x64",
    "tauri": "tauri",
    "tauri:start": "tauri dev",
    "tauri:build": "tauri build"
  },
  "build": {
    "appId": "com.maboutique.app",
    "productName": "Ma Boutique",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/front-boutique/browser/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src-tauri/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.11",
    "@angular/cdk": "^18.2.11",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/material": "^18.2.11",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.8",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.4.7",
    "express": "^4.18.2",
    "font-awesome": "^4.7.0",
    "html2pdf.js": "^0.12.1",
    "jquery": "^3.7.1",
    "ngx-spinner": "^17.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.8",
    "@angular/cli": "^18.2.8",
    "@angular/compiler-cli": "^18.2.0",
    "@tauri-apps/api": "^2.10.0",
    "@tauri-apps/cli": "^2.10.0",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.23",
    "electron": "^34.0.0",
    "electron-builder": "^26.4.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.5.2"
  }
}
